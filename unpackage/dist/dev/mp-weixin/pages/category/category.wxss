
.van-sidebar-con {
	overflow: auto;
	width: 25vw;
	height: 100vh;
}
.van-sidebar-item {
	text-align: center;
}


.goods {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
	padding: 8rpx;
}
.goods-item {
	/* width: 200rpx; */
	position: relative;
	width: 48%;
	margin-top: 20rpx;
	text-align: center;
	color: #333;
	padding-bottom: 85rpx;
}
.image {
	width: 100%;
	border-radius: 10rpx;
}
.desc-info {
	position: absolute;
	left: 0;
	right: 0;
	bottom: 5rpx;
}
.title {
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	font-size: 28rpx;
}
.info {
	font-size: 26rpx;
}
.info .price {
	color: #ff5777;
	/* padding-right: 10rpx; */
}
.info .icon {
	width: 30rpx;
	height: 30rpx;
	padding: 0 6rpx 0 10rpx;
	position: relative;
	top: 4rpx;
}
.cfav {
	/* padding-left: 10rpx; */
	position: relative;
}


.content {
	height: 100vh;
	width: 75vw;
}
.subcategory {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	padding: 20rpx;
	margin-top: 30rpx;
}
.subcategory .item {
	width: 33.33%;
	text-align: center;
}
.subcategory .item image {
	width: 80%;
}
.subcategory .item view {
	font-size: 28rpx;
	margin: 30rpx 0;
}
.detail {
	width: 100%;
}


.cate {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}

