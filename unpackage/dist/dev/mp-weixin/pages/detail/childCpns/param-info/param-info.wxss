
.param-info {
	padding: 40rpx 30rpx;
	font-size: 30rpx;
	border-bottom: 12rpx solid #f2f2f2;
}
.row {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 84rpx;
	line-height: 84rpx;
	border-bottom: 1px solid #f2f2f2;
}
.size-item {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	margin-right: 42rpx;
}
.info-row {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.info-row .key {
	width: 160rpx;
}
.info-row .value {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	color: #f55777;
}

