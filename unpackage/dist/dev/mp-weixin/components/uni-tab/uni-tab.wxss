
.tab-control {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 16rpx;
}
.tab-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
}
